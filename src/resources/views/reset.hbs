<body>
    <div class="root">
        <div class="App">

            <section class="formbox --flex-center --100vh --bg-grey">
                <div class="container box">
                    <div class="main-container --flex-center">
                        <div class="form-container reset">
                            <form
                                id="resetForm"
                                class="--form-control"
                                action=""
                                method="POST"
                            >
                                <h2
                                    class="--color-danger --text-center"
                                >Reset</h2>
                                <input
                                    name="Username"
                                    id=""
                                    class="--width-100 Username"
                                    placeholder="Email"
                                />
                                <small
                                    class="text-danger error-text password_err"
                                ></small>
                                <button
                                    type="submit"
                                    class="--btn --btn-primary --btn-block"
                                >Reset password</button>
                            </form>
                            <span class="--text-sm --block">We will send u a
                                link</span>
                            <div class="close">
                                <a href="/login"><i
                                        class="fa-solid fa-xmark"
                                    ></i></a>
                            </div>
                        </div>
                        <div class="img-container">
                            <img src="./assets/img/reset.svg" alt="login" />
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
    <script
        src="https://code.jquery.com/jquery-3.6.3.js"
        integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
        crossorigin="anonymous"
    ></script>
    <script src="/js/login/reset.js"></script>

</body>