<div class="page-wrapper">
  <div class="page-breadcrumb">
    <div class="row align-items-center">
      <div class="col-md-6 col-8 align-self-center">
        <h3 class="page-title mb-0 p-0">New Post</h3>
        <div class="d-flex align-items-center"></div>
      </div>
      <div class="col-md-6 col-4 align-self-center">
        <div class="text-end"></div>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <form
      action="/admin/post/add"
      method="post"
      enctype="multipart/form-data"
      class="form-material row"
    >
      <div class="col-lg-8 col-xlg-9 col-md-7">
        <div class="card">
          <div class="card-body">
            <div class="form-group">
              <label class="col-md-12 mb-0">Title*</label>
              <div class="col-md-12">
                <input
                  type="text"
                  placeholder="Post title"
                  class="form-control ps-0 form-control-line"
                  id="postTitle"
                  name="title"
                  oninput="onPostTitleInput(this.value)"
                />
              </div>
            </div>
            <div class="form-group">
              <label for="postSlug" class="col-md-12">Slug*</label>
              <div class="col-md-12">
                <input
                  id="postSlug"
                  type="text"
                  placeholder="Slug"
                  name="slug"
                  class="form-control ps-0 form-control-line"
                />
              </div>
            </div>
            <div class="form-group">
              <label for="file" class="col-md-12">Image</label>
              <div class="col-md-12">
                <input
                  type="file"
                  name="file"
                  id="file"
                  class="form-control ps-0 form-control-line"
                  accept="image/png, image/gif, image/jpeg"
                />
              </div>
            </div>
            <div class="form-group">
              <label for="example-email" class="col-md-12">Content</label>
              <div class="col-md-12">
                <textarea
                  id="postContent"
                  name="content"
                  class="form-control ps-0 form-control-line"
                ></textarea>
                <script>
                  const options = {
                    fillEmptyBlocks: false,
                    enterMode: CKEDITOR.ENTER_BR,
                  };
                  CKEDITOR.replace('content', options);
                  const editor = CKEDITOR.instances['postContent'];
                  editor.on('instanceReady', function () {
                    var writer = editor.dataProcessor.writer;
                    writer.indentationChars = '';
                    writer.lineBreakChars = '';
                  });
                </script>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12 d-flex">
                <button
                  class="btn btn-success mx-auto mx-md-0 text-white"
                  type="submit"
                >
                  Save
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-xlg-3 col-md-5">
        <div class="card">
          <div class="card-body profile-card">
            <div class="mt-4">
              <div class="row justify-content-center">
                <div class="form-group">
                  <label class="col-sm-12">Status</label>
                  <div class="col-sm-12 border-bottom">
                    <select
                      name="status"
                      id="postStatus"
                      type="number"
                      class="form-select shadow-none border-0 ps-0 form-control-line"
                    >
                      <label for="postStatus">Status</label>
                      <option value="1">Draft</option>
                      <option value="2">Active</option>
                      <option value="3">Hide</option>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-12">Category</label>
                  <div class="row border-bottom">
                    <div class="col-4">
                      <input type="radio" value="art" id="art" />
                      <label htmlFor="art">Art</label>
                    </div>
                    <div class="col-4">
                      <input type="radio" value="science" id="art" />
                      <label htmlFor="art">Science</label>
                    </div>
                    <div class="col-4">
                      <input type="radio" value="technology" id="art" />
                      <label htmlFor="art">Technology</label>
                    </div>
                    <div class="col-4">
                      <input type="radio" value="cinema" id="art" />
                      <label htmlFor="art">Cinema</label>
                    </div>
                    <div class="col-4">
                      <input type="radio" value="design" id="art" />
                      <label htmlFor="art">Design</label>
                    </div>
                    <div class="col-4">
                      <input type="radio" value="food" id="art" />
                      <label htmlFor="art">food</label>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
