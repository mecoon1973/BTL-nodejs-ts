<div class='page-wrapper'>
  <div class='page-breadcrumb'>
    <div class='row align-items-center'>
      <div class='col-md-6 col-8 align-self-center'>
        <h3 class='page-title mb-0 p-0'>List Hotel</h3>
        <div class='d-flex align-items-center'></div>
      </div>
      <div class='col-md-6 col-4 align-self-center'>
        <div class='text-end'>
          <a
            href='/admin/hotel/add'
            class='btn btn-success d-none d-md-inline-block text-white'
          >
            New Hotel</a>
        </div>
      </div>
    </div>
  </div>
  <div class='container-fluid'>
    <div class='row'>
      <div class='col-sm-12'>
        <div class='card'>
          <div class='card-body'>
            <!--
            <h4 class="card-title">Basic Table</h4>
            <h6 class="card-subtitle">Add class <code>.table</code></h6>-->
            <div class='table-responsive'>
              <table class='table user-table no-wrap'>
                <thead>
                  <tr>
                    <th class='border-top-0'>#</th>
                    <th class='border-top-0'>Name hotel</th>
                    <th class='border-top-0'>Total room</th>
                    <th class='border-top-0'>Vip room</th>
                    <th class='border-top-0'>Address</th>
                    <th class='border-top-0'>Price</th>
                    <th class='border-top-0'>Action</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each hotels}}
                    <tr>
                      <td>{{this.id}} </td>
                      <td>{{this.nameHotel}}</td>
                      <td>{{this.countRoom}}</td>
                      <td>{{this.vipRoom}}</td>
                      <td>{{this.Address}}</td>
                      <td>{{this.moneyForOneNight}}</td>
                      <td>
                        <a
                          type='button'
                          href='/admin/hotel/edit/{{this.id}}'
                          class='btn btn-success text-white'
                        >
                          <i class='fas fa-edit'></i>
                        </a>
                        <button
                          type='button'
                          onclick='onConfirmDeleteHotel(`{{this.id}}`)'
                          class='btn btn-danger text-white'
                        >
                          <i class='far fa-trash-alt'></i>
                        </button>
                      </td>
                    </tr>

                  {{/each}}
                </tbody>
              </table>
            </div>
            <nav>
              <div class='d-flex flex-row justify-content-end'>
                <span style='font-size: 14px'>
                  Showing
                  {{pagination.startIndex}}
                  to
                  {{pagination.endIndex}}
                  of
                  {{pagination.total}}
                  entries
                </span>
              </div>
              <ul class='pagination justify-content-end'>
                <li class='page-item {{pagination.prevClass}}'>
                  <a
                    class='page-link'
                    href='/admin/hotel?page={{pagination.prevPage}}&limit={{pagination.limit}}'
                  >Previous</a>
                </li>
                <li class='page-item {{pagination.nextClass}}'>
                  <a
                    class='page-link'
                    href='/admin/hotel?page={{pagination.nextPage}}&limit={{pagination.limit}}'
                  >Next</a>
                </li>

              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>