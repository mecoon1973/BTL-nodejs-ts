	<script>
		console.log({{listComment}})
		$('#user-input').on('click', function (e){
			$.ajax({
			url: '/service/checkUserWithRoom',
			method: 'POST',
			data : {idRoom:  {{hotel.id}} },
			xhrFields: {
				withCredentials: true
			},
			processData: true,
			success: function (data) {
				if(data.check){
					$("#user-input").removeAttr("readonly")
				}
			}
		})
		})
		
		function datPhong() {
		// Xử lý logic đặt phòng ở đây
			const selectedRadio = $('input[name="room-type"]:checked')
			alert("Bạn đã đặt phòng thành công!");
		}
		$('#submitRoom').on('click', function(){
			var kindOfRoom = $('input[name="room-type"]:checked') == 'normal-room' ? 0 : 1
			$.ajax({
				url: window.location.href,
				method: 'POST',
				data : {kindOfRoom : kindOfRoom},
				xhrFields: {
					withCredentials: true
				},
				processData: true,
				success: function (data) {
					if (data.url) {
						window.location.href = data.url
					}
					if(data.check) {
						alert("Bạn đã đặt phòng thành công!")
					}
				}
			})
		})

		function out() {
			window.history.back();
		}
		function themVaoYeuThich(btn) {
			if (btn.classList.contains("active")) {
				btn.classList.remove("active");
				alert("Đã xóa khách sạn khỏi danh sách yêu thích!");
			} else {
				btn.classList.add("active");
				alert("Đã thêm khách sạn vào danh sách yêu thích!");
			}
		}
		function xoaKhoiYeuThich(btn) {
			if (btn.classList.contains("active")) {
				btn.classList.remove("active");
				alert("Đã thêm khách sạn vào danh sách yêu thích!");
			} else {
				btn.classList.add("active");
				alert("Đã xóa khách sạn khỏi danh sách yêu thích!");
			}
		}
		// Lấy giá trị ban đầu của phòng VIP
		const vipPrice = {{hotel.moneyForOneNight}};

		// Tính giá trị mới
		const newPrice = vipPrice * 1.2;

		// Hiển thị giá trị mới lên màn hình
		document.getElementById("vip-price").innerHTML = newPrice + "/đêm";


		var socket = io()
		socket.on('commentHotelToUser' , (data) => {
			if(data.roomid == {{hotel.id}} ){
				$('.message').append(`<div class="usercomment">
									<div class="sender ">${data.userid.name}</div>
									<div class="contentSender ">${data.content}</div>
								</div>`)
			}

		})
		var userIDcl
		if($('#userName').val() == ''){
			userIDcl = $('#userName').val()
		}else{
			userIDcl = 0
		}
		$('#form-send').on('submit', function(e) {
			e.preventDefault()
			if($('#user-input').val() != ""){
				$('.message').append(`<div class="usercomment">
										<div class="sender ">${ $('#userName').val() }</div>
										<div class="contentSender ">${$('#user-input').val()}</div>
									</div>`)
				console.log('infunction '+ userIDcl + " ////////////////////")
				socket.emit('commentHotel' , {
					idRoom : {{hotel.id}} , 
					idUser : {{user.id}},
					content : $('#user-input').val()
				})
			}

		})
