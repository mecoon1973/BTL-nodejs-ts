                    <div class="message">
						{{#each listComment}}
							<div class="usercomment">
									<div class="sender ">{{this.userName}}</div>
									<div class="contentSender ">{{this.content}}</div>
								</div>
						{{/each}}

                    </div>
                </div>
				<input type="hidden" id="userName" value="{{user.name}}">
                <div class="input-group">
                        <form action="" id="form-send">
                    <input
                        type="text"
                        id="user-input"
                        class="form-control"
                        placeholder="Enter your message..."
