<head>
    <link rel="stylesheet" href="/style/style_singnup.css" />
</head><body>
    <div class="root">
        <div class="App">

            <section class="formbox --flex-center --100vh --bg-grey">
                <div class="container">
                    <div class="main-container --flex-center">
                        <div class="img-container">
                            <img src="./img/login.svg" alt="login" />
                        </div>
                        <div class="form-container">
                            <form
                                id="registerForm"
                                class="--form-control"
                                action=""
                                method="POST"
                            >
                                <h2
                                    class="--color-danger --text-center"
                                >Register</h2>
                                <input
                                    type="text"
                                    class="--width-100"
                                    name="name"
                                    id="name"
                                    placeholder="name"
                                />
                                <input
                                    class="--width-100"
                                    name="username"
                                    id="username"
                                    placeholder="Username"
                                />
                                <p class="hide-indicator">Email không hợp lệ</p>
                                <div class="password">
                                    <input
                                        type="password"
                                        name="password"
                                        id="password"
                                        class="--width-100"
                                        placeholder="Password"
                                    />
                                    <span class="icon"></span>
                                </div>
                                <div class="password">
                                    <input
                                        type="password"
                                        name="passwordAgain"
                                        id="passwordAgain"
                                        class="--width-100"
                                        placeholder="Password"
                                    />
                                    <span class="icon"></span>
                                </div>
                                <small
                                    class="text-danger error-text password_err"
                                ></small>
                                <button
                                    type="submit"
                                    class="--btn --btn-primary --btn-block btn-disabled"
                                >Register</button>
                                <span class="--text-sm --block">Have an account?
                                    <a href="/login">Login</a></span>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <script
        src="https://code.jquery.com/jquery-3.6.3.js"
        integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
        crossorigin="anonymous"
    ></script>
    <script src="/js/login/register.js"></script>

</body>