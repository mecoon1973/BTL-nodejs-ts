<head>
    {{! <link rel="stylesheet" href="/style/style_blog.css" />
    <link rel="stylesheet" href="/style/style_write.css" /> }}
    <link rel="stylesheet" href="/style/chatadmin.css" />
</head>
<div class="container">
    <div class="chat-container">
        {{#if user}}
            <input type="hidden" value="{{user.email}}" id="emailUser" />
            <input type="hidden" value="" id="socketUser" />
            <input type="hidden" value="{{user.name}}" id="nameUser" />
            <input type="hidden" value="{{user.id}}" id="idUser" />
            <input type="hidden" value="" id="idUserChat" />
        {{/if}}
        <div class="row">
            <div class="col-xl-1">
                <div class="listUser">
                    {{! <div class="nameUser "> <h5> </h5> </div> }}
                </div>

            </div>
            <div class="container1 col-xl-8">
                <div class="listMessage">
                    <div class="message">

                        {{! <div class="sender">John Doe</div>
                            <div class="contentSender ">Hello! How are you?</div>
                            <div class="contentSender ">có cái loz</div>
                            <div class="receive">Jane Smith</div>
                            <div class="contentReceive">I'm good, thanks! How about you?</div> }}
                    </div>
                </div>
                <div class="input-group">
                    <form action="" id="form-send">
                        <input
                            type="text"
                            id="user-input"
                            class="form-control"
                            placeholder="Enter your message..."
                        />
                        <button
                            id="send-button"
                            class="btn btn-primary"
                            type="submit"
                        >gửi</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

